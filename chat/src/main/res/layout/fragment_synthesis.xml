<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SynthesisFrag"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <ImageView
            android:id="@+id/img"
            android:layout_width="320dp"
            android:layout_centerHorizontal="true"
            android:layout_height="260dp"/>
        <TextView
        android:text="曾小贤"
        android:id="@+id/name"
        android:layout_below="@id/img"
        android:layout_marginLeft="39dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:text="副主任医师"
            android:id="@+id/work"
            android:layout_below="@id/img"
            android:layout_toRightOf="@id/name"
            android:layout_marginLeft="20dp"
            android:textSize="10sp"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address"
            android:text="东升有福啊大大"
            android:layout_below="@id/name"
            android:layout_marginLeft="39dp"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/good"
            android:text="好评率 98%"
            android:layout_below="@id/address"
            android:layout_marginLeft="39dp"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="服务患者数 396"
            android:id="@+id/number"
            android:layout_below="@id/address"
            android:layout_toRightOf="@id/good"
            android:layout_marginLeft="20dp"
            android:textSize="10sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/more"
            android:src="@mipmap/common_icon_more_n"
            android:layout_below="@id/img"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:layout_marginRight="50dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <LinearLayout
            android:layout_below="@id/number"
            android:orientation="horizontal"
            android:background="@drawable/back_a"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp">
              <TextView
                  android:id="@+id/money"
                  android:text="500h/次"
                  android:gravity="center"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="40dp"/>
            <Button
                android:id="@+id/btn_go"
                android:background="@color/blue"
                android:text="问诊咨询"
                android:textColor="@color/white"
                android:layout_width="98dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/up"
            android:src="@mipmap/common_list_previous_n"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/next"
            android:layout_alignParentRight="true"
            android:src="@mipmap/common_information_next_n"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/page"
        android:text="第1页"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>