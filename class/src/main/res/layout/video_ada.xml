<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dou361.ijkplayer.widget.IjkVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.dou361.ijkplayer.widget.IjkVideoView>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/video_pause"
        android:src="@mipmap/common_icon_time_out_n"
        android:layout_width="65dp"
        android:layout_height="65dp"/>
    <ImageView
        android:id="@+id/qian"
        android:layout_marginTop="400dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/common_icon_toll_n"
        android:layout_marginRight="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <CheckBox
        android:id="@+id/cb_collecte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qian"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/common_button_collection_large_n"
        android:button="@null" />
    <CheckBox
        android:id="@+id/cb_barrage"
        android:background="@mipmap/common_icon_close_live_commenting_n"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/cb_collecte"
        android:button="@null"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>