<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>


    <ImageView
        android:id="@+id/video_buy"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/common_icon_toll_n"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <CheckBox
        android:button="@null"
        android:layout_marginTop="20dp"
         android:layout_below="@id/video_buy"
        android:id="@+id/video_shou"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
       android:background="@mipmap/common_button_collection_large_n"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/video_dian"
        android:src="@mipmap/common_icon_close_live_commenting_n"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/video_shou"
        android:layout_marginTop="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/video_count"
        android:text="5"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/video_dian"
        android:layout_marginTop="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>