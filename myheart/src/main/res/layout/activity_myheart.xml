<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/patient_relative_titlebar"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/my_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/common_icon_back_white_n" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/common_nav_message_white_n" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/mine_activity_iv_user_head_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/dermatology" />

            <TextView
                android:id="@+id/mine_activity_tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="猪小妹"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"/>

            <Button
                android:id="@+id/mine_activity_btn_login"
                android:layout_width="58dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_mashanglogin"
                android:layout_centerVertical="true"
                android:text="登录"
                android:textColor="#3087ea"/>

            <Button
                android:id="@+id/mine_activity_btn_sign_in"
                android:layout_width="58dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_mashanglogin"
                android:layout_centerVertical="true"
                android:text="签到"
                android:textColor="#3087ea"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/linear_mashangjinru"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的问诊"
            android:textSize="16dp"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/the_current_inquiry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前问诊"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:textColor="#3087ea"
                android:id="@+id/current"
                android:background="@drawable/my_icon_next_n"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/historical_inquiry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史问诊"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"/>

            <ImageView
                android:id="@+id/history"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:textColor="#3087ea"
                android:background="@drawable/my_icon_next_n"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/file"
                    android:layout_width="29dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_icon_file_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="我的档案"
                    android:textColor="#333333"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_activity_linear_my_money"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/my_icon_wallet_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/favorite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/common_button_collection_large_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/yijian"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/my_icon_advice_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="被采纳的建议"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/my_icon_video_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的视频"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/my_icon_circle_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的病友圈"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/attention"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/common_icon_attention_small_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的关注"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/mine_activity_iv_my_task"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/my_icon_task_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的任务"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/mine_activity_iv_set_up"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/my_icon_set_n"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置管理"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="©八维移动通信学院毕业作品"
                android:textSize="16dp"
                android:textColor="#666666"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>