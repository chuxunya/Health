<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:background="@drawable/my_wallet_background"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="308dp">
        <RelativeLayout
            android:id="@+id/my_relat"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:id="@+id/message_fanhui"
                android:background="@drawable/common_icon_back_black_n"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的钱包"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center"
                />
            <RelativeLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="116dp">
                <ImageView
                    android:id="@+id/img_buttton"
                    android:background="@color/button"
                    android:layout_centerHorizontal="true"
                    android:layout_width="116dp"
                    android:layout_height="116dp"/>
                <TextView
                    android:id="@+id/hbi"
                    android:textColor="@color/blue"
                    android:text="1500"
                    android:textSize="48sp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/blue"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text="H币"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </RelativeLayout>
        <TextView
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:layout_marginTop="10sp"
            android:text="满2000H币可提现"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/mywallet_tixian"
                android:background="@color/white"
                android:text="提现"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:layout_marginLeft="70dp"
                android:layout_width="58dp"
                android:layout_height="30dp"/>
            <Button
                android:id="@+id/mywallet_chongzhi"
                android:background="@color/button_corners_white"
                android:text="充值"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:layout_marginLeft="140dp"

                android:layout_width="58dp"
                android:layout_height="30dp"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:background="#dddddd"
        android:layout_width="fill_parent"
        android:layout_height="6sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mywallet_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>