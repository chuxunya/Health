<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/history_img"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘瑾宁"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/history_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猪肉"
            android:textSize="15dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="5dp"
            android:id="@+id/history_zhiwu"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问诊时间"
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20191126"
            android:textSize="15dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="50dp"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看问诊记录"
            android:textColor="#fff"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="100dp"
            android:background="@color/blue"
            android:id="@+id/history_jilu"


            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去评价"
            android:textColor="#fff"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="100dp"
            android:background="@color/blue"
            android:id="@+id/history_pingjia"
            />
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#E251585C"
        android:layout_marginTop="10dp"
        ></View>
</LinearLayout>