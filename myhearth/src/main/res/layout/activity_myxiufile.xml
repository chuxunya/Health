<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/common_icon_back_black_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="我的档案"
                    android:textColor="#333333"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#F2F2F2"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <LinearLayout
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[主要病症]"
                        android:textColor="#3087ea"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/diseaseMai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="true"
                        android:hint="请输入您的主要病症"
                        android:inputType="text"
                        android:textColorHint="#999999"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[现病史]"
                        android:textColor="#3087ea"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/diseaseNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="true"
                        android:hint="请详细输入您的当前病状"
                        android:inputType="text"
                        android:textColorHint="#999999"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin33"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[既往病史]"
                        android:textColor="#3087ea"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/diseaseBefor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="true"
                        android:hint="请输入您的既往病史"
                        android:inputType="text"
                        android:textColorHint="#999999"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin33"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[最近一次医疗经历]"
                        android:textColor="#3087ea"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/treatmentHospitalRecen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="true"
                        android:hint="请输入医院名称"
                        android:inputType="text"
                        android:textColorHint="#999999"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin55"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin44"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/startTim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="请选择治疗开始时间"
                            android:textColor="#333333"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/edit_starttim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请选择治疗开始时间"
                            android:textColor="#333333"
                            android:background="@null"
                            android:visibility="invisible"
                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:textSize="12dp" />

                        <ImageView
                            android:id="@+id/start_ima"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin66"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin55"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/endTim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/en"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="请选择治疗结束时间"
                            android:textColor="#333333"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/edit_endtim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请选择治疗结束时间"
                            android:textColor="#333333"
                            android:visibility="invisible"
                            android:background="@null"
                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:textSize="12dp" />

                        <ImageView
                            android:id="@+id/end_ima"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin77"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin66"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/treatmentProces"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@null"
                        android:ems="10"
                        android:focusable="true"
                        android:hint="请输入医疗过程"
                        android:inputType="text"
                        android:textColorHint="#999999"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin88"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin77"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[相关图片]"
                        android:textColor="#3087ea"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="#f2f2f2"
                        android:gravity="center_vertical"
                        android:text="最多可添加6张图片；长按为图片排序" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/bo_image_lis"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/add_imag"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/add"
                            />

                    </LinearLayout>

                    <Button
                        android:id="@+id/addFile"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="16dp"

                        android:text="添加"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>