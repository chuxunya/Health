<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
       >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/info_list_headPic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/dermatology"/>
            <TextView
                android:layout_toRightOf="@id/info_list_headPic"
                android:id="@+id/info_list_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="猪小妹"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dermatology"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/info_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:textColor="#333333"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/info_list_commentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:layout_marginTop="10dp"
                android:textColor="#333333"
                android:textSize="10sp"
                />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/zantong"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/common_icon_agree_n"
                            />
                <TextView
                    android:id="@+id/info_list_supportNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_marginLeft="6dp"
                    android:textColor="#333333"
                    android:textSize="10sp"
                        />

                <ImageView
                    android:id="@+id/fandui"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="14sp"
                    android:background="@drawable/common_icon_disagree_n"
                    />
                <TextView
                    android:id="@+id/info_list_opposeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="#333333"
                    android:textSize="10sp"
                    android:layout_marginLeft="6dp"
                  />

                <ImageView
                    android:id="@+id/img_caina"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/comment_list_icon_adoption_n" />
                <TextView
                    android:id="@+id/info_list_caina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="采纳"
                    android:textColor="#333333"
                    android:textSize="10sp"
                    android:layout_marginLeft="6dp"
                    />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
