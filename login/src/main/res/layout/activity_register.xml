<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context=".view.RegisterActivity">
    <ImageView
        android:layout_width="67dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/registered_icon_logo"
        android:src="@mipmap/logofan" />
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="400dp"
        android:layout_below="@id/registered_icon_logo"
        android:background="@drawable/bglinear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:alpha="0.3"
        ></RelativeLayout>
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="400dp"
        android:layout_below="@id/registered_icon_logo"
        android:background="@drawable/bglinear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:alpha="0.6"
        ></RelativeLayout>
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:layout_below="@+id/registered_icon_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/bglinear"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/login_icon_mail_n"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/iv_mail_n"
            />
        <EditText
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:singleLine="true"
            android:hint="请输入邮箱"
            android:id="@+id/registered_et_youxiang"
            android:shadowColor="#999999"
            android:lines="1"
            android:maxLength="20"
            android:paddingBottom="17dp"
            android:textSize="14sp"
            android:paddingLeft="31dp"
            android:layout_marginTop="20dp"
            ></EditText>
        <Button
            android:layout_width="58dp"
            android:layout_height="20dp"
            android:background="@drawable/btlogin"
            android:text="获取验证码"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_alignTop="@+id/iv_mail_n"
            android:layout_alignParentRight="true"
            android:layout_marginRight="33dp"
            android:textColor="#ffffff"
            android:id="@+id/registered_cb_code"
            ></Button>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/register_icon_verification_code_n"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/icon_verification"
            android:layout_below="@id/registered_et_youxiang"

            />
        <EditText
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:hint="请输入验证码"
            android:id="@+id/registered_et_code"
            android:layout_below="@id/registered_et_youxiang"
            android:shadowColor="#999999"
            android:lines="1"
            android:maxLength="10"
            android:paddingBottom="17dp"
            android:textSize="14sp"
            android:paddingLeft="35dp"
            android:layout_marginTop="10dp"
            ></EditText>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/login_icon_lock_n"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/icon_lock_one"
            android:layout_below="@id/registered_et_code"
            />
        <EditText
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:hint="请输入密码"
            android:id="@+id/registered_et_pwd"
            android:layout_below="@id/registered_et_code"
            android:shadowColor="#999999"
            android:lines="1"
            android:maxLength="10"
            android:paddingBottom="17dp"
            android:textSize="14sp"
            android:paddingLeft="35dp"
            android:password="true"
            android:layout_marginTop="10dp"
            ></EditText>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/login_icon_hide_password_n"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_below="@id/registered_et_code"
            android:id="@+id/registered_icon_yan_false"
            android:layout_marginTop="30dp"
            ></ImageView>
        <ImageView
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/login_icon_show_password"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_below="@id/registered_et_code"
            android:id="@+id/registered_icon_yan_true"
            android:layout_marginTop="30dp"
            ></ImageView>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/login_icon_lock_n"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/icon_lock_two"
            android:layout_below="@id/registered_et_pwd"
            />
        <EditText
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:hint="请再次输入密码"
            android:id="@+id/registered_et_pwdtwo"
            android:layout_below="@id/registered_et_pwd"
            android:shadowColor="#999999"
            android:lines="1"
            android:maxLength="10"
            android:paddingBottom="17dp"
            android:textSize="14sp"
            android:paddingLeft="35dp"
            android:password="true"
            android:layout_marginTop="10dp"
            ></EditText>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/login_icon_hide_password_n"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_below="@id/registered_et_pwd"
            android:id="@+id/registered_icon_yan_false_two"
            android:layout_marginTop="30dp"
            ></ImageView>
        <ImageView
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/login_icon_show_password"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_below="@id/registered_et_pwd"
            android:id="@+id/registered_icon_yan_true_two"
            android:layout_marginTop="30dp"
            ></ImageView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/register_icon_invitatiion_code_n"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/icon_invitatiion"
            android:layout_below="@id/registered_et_pwdtwo"
            />
        <EditText
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:hint="请输入邀请码"
            android:id="@+id/registered_et_yaoqing"
            android:layout_below="@id/registered_et_pwdtwo"
            android:shadowColor="#999999"
            android:lines="1"
            android:maxLength="10"
            android:paddingBottom="17dp"
            android:textSize="14sp"
            android:paddingLeft="35dp"
            android:layout_marginTop="10dp"
            ></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_below="@id/registered_et_pwdtwo"
            android:textSize="10sp"
            android:text="选填"
            android:textColor="#333333"
            android:layout_marginTop="30dp"
            ></TextView>

        <Button
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:id="@+id/registered_bt_zhuce"
            android:layout_below="@id/registered_et_yaoqing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:background="@drawable/btlogin"
            android:text="注册"
            android:textSize="14sp"
            android:textColor="#ffffff"
            ></Button>
    </RelativeLayout>

</RelativeLayout>