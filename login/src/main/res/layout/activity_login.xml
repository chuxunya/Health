<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/login_bg"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:src="@mipmap/logofan"
        android:layout_marginTop="46dp"
        android:layout_centerHorizontal="true"
        android:layout_width="67dp"
        android:layout_height="64dp">
    </ImageView>
    <RelativeLayout
        android:id="@+id/relate_view"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:layout_height="228dp">
        <RelativeLayout
            android:alpha="0.3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bglinear"
            android:layout_width="240dp"
            android:layout_height="228dp">

        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"

            android:alpha="0.6"
            android:background="@drawable/bglinear"
            android:layout_width="260dp"
            android:layout_height="223dp">

        </RelativeLayout>
        <RelativeLayout

            android:layout_centerHorizontal="true"
            android:background="@drawable/bglinear"
            android:layout_width="280dp"
            android:layout_height="218dp">
            <LinearLayout

                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:background="@mipmap/login_icon_mail_n"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <EditText

                        android:id="@+id/login_edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入邮箱"
                        android:singleLine="true"
                        android:textColorHint="#999999"
                        android:textSize="14sp">

                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <RelativeLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp">
                        <ImageView

                            android:background="@mipmap/login_icon_lock_n"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                        <ImageView
                            android:visibility="gone"
                            android:background="@mipmap/login_icon_lock_n"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <EditText
                            android:id="@+id/login_edit_pwd"
                            android:maxLength="16"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="请输入密码"
                            android:password="true"
                            android:singleLine="true"
                            android:textColorHint="#999999"
                            android:textSize="14sp">

                        </EditText>
                        <ImageView
                            android:id="@+id/login_image_true"
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/login_icon_show_password"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>
                        <ImageView
                            android:id="@+id/login_image_false"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/login_icon_hide_password_n"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>

                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/login_button_login"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="登录"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/btlogin"/>


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/relate_view"
        android:layout_width="240dp"
        android:layout_height="14dp">

        <TextView
            android:id="@+id/login_button_updateuserpwd"
            android:textSize="10sp"
            android:textColor="#fff"
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/login_button_register"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:text="暂无账号？"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:text="立即注册"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="86dp"
        android:layout_marginRight="86dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="#fff"
                android:layout_width="54dp"
                android:layout_height="1dp"></LinearLayout>
            <TextView
                android:textColor="#fff"
                android:textSize="12sp"
                android:text="  其他登录方式  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="#fff"
                android:layout_width="54dp"
                android:layout_height="1dp"></LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/login_button_wx"
            android:layout_marginTop="10dp"
            android:background="@mipmap/login_icon_weixin_white_n"
            android:layout_width="24dp"
            android:layout_height="24dp">

        </ImageView>
    </LinearLayout>


</RelativeLayout>