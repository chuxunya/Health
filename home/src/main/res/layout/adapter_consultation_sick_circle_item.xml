<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#fff"
    android:gravity="center"
    android:layout_marginTop="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/sick_circle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_centerVertical="true"/>
            
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/h_currency"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/sick_circle_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="13sp"
                android:textColor="#d92109"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>
            
        </RelativeLayout>

        <TextView
            android:id="@+id/sick_circle_releaseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="10sp"
            android:textColor="#333333"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/sick_circle_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/sick_circle_collectionNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="10sp"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"/>

            <TextView
                android:id="@+id/sick_circle_commentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="10sp"
                android:textColor="#333333"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
