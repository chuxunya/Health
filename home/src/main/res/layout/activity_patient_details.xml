<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#cccc"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.PatientDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/patient_relative_titlebar"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:background="#ffff">

                <ImageView
                    android:id="@+id/patient_iv_user_head_pic"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/dermatology" />

                <TextView
                    android:id="@+id/patient_activity_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"/>

                <ImageView
                    android:id="@+id/patient_iv_user_message"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/common_nav_message_black_n" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/patient_activity_tv_adoptNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="#3087ea"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[病症]"
                        android:textColor="#3087ea"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/patient_activity_tv_disease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="面神经炎"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[科室]"
                        android:textColor="#3087ea"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/patient_activity_tv_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="内科"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[病症详情]"
                        android:textColor="#3087ea"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/patient_activity_tv_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="[治疗经历]"
                            android:textColor="#3087ea"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/patient_activity_tv_treatment_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/patient_activity_tv_treatmentProcess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[相关图片]"
                        android:textColor="#3087ea"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"/>

                    <ImageView
                        android:id="@+id/patient_activity_iv_picture"
                        android:layout_width="match_parent"
                        android:layout_height="144dp"
                        android:layout_marginTop="10dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="18dp">

                        <TextView
                            android:id="@+id/patient_activity_tv_commentNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/patient_activity_iv_content"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@mipmap/common_icon_comment_large_n"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="40dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/patient_activity_tv_collectionNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="75dp"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@mipmap/common_button_collection_small_n"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="95dp"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="30dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="20dp"
                            android:background="#3087ea"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="被采纳的建议"
                            android:textColor="#333333"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/adoptFlag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="4dp"
                                android:layout_height="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="被采纳的建议"
                                android:textColor="#333333"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            xmlns:fresco="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <com.facebook.drawee.view.SimpleDraweeView
                                fresco:placeholderImage="@mipmap/dermatology"
                                fresco:failureImage="@mipmap/dermatology"
                                android:id="@+id/img_HeadPic"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                />

                            <TextView
                                android:id="@+id/name_NickName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/img_HeadPic"
                                android:text="可爱的姑娘"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/img_HeadPic"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/img_HeadPic"
                                android:text="获取1000金币"
                                android:textColor="#ffab26"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/time_adoptTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="201991515:55:56"
                                android:textColor="#333333"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/text_adoptComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="hhhhhhhhhhhhh"
                            android:textColor="#333333"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/patient_activity_relative_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_sick_circle_comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="100dp">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/patient_activity_iv_cancel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/common_icon_close_grey_n"/>

                <EditText
                    android:id="@+id/patient_activity_et_content"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:hint="在此留下高见吧!!"
                    android:paddingLeft="10dp"
                    android:background="@drawable/ed_detalis_shape"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/patient_activity_iv_send_content"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/common_icon_send_white_n"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="35dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/patient_activity_relative_release_sickCircle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@mipmap/the_bottom_bar"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/patient_activity_iv_intent_release_sickCircle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@mipmap/common_tab_circle_s"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</LinearLayout>