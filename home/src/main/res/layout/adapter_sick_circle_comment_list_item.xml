<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <com.facebook.drawee.view.SimpleDraweeView
        fresco:roundAsCircle="true"
        android:id="@+id/adapter_comment_list_iv_headPic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/dermatology"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        android:background="@drawable/linear_mashangjinru">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/adapter_comment_list_tv_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="猪小妹"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:background="@mipmap/common_icon_inquiry_n"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/adapter_comment_list_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:textColor="#333333"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="18dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/adapter_comment_list_tv_commentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/adapter_comment_list_tv_supportNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"/>
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/common_icon_agree_n"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/adapter_comment_list_tv_opposeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/common_icon_disagree_n"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
